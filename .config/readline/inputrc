# Do not bell on tab-completion.
set bell-style none

# Almost disable asking for long completion lists.
set completion-query-items 5000

# Enable colors for files in tab-completion.
set colored-stats on
# Append char to indicate type.
set visible-stats on
set mark-symlinked-directories on
# Color the common prefix.
set colored-completion-prefix on
set menu-complete-display-prefix on

# Insert paste as a single string.
set enable-bracketed-paste on

#
# Key bindings - Movement
#

# Move to beginning/end of line.
"\C-a": beginning-of-line
"\e[H": beginning-of-line
"\C-e": end-of-line
"\e[F": end-of-line

# Move forward/backward one character.
"\e[D": backward-char
"\e[C": forward-char

# Move forward/backward one word.
"\e[1;3D": backward-word
"\e[1;3C": forward-word
"\e[1;5D": shell-backward-word
"\e[1;5C": shell-forward-word

# Search previous/next character.
"\e/": character-search
"\e?": character-search-backward

#
# Key bindings - History Control
#

# Search history for a line containing the current line up to the cursor.
"\e[A": history-substring-search-backward
"\e[B": history-substring-search-forward

# Search history for a line beginning with the current line up to the cursor.
"\e[1;3A": history-search-backward
"\e[1;3B": history-search-backward

# Move to the previous/next event in the history list.
"\e[1;5A": previous-history
"\e[1;5B": next-history

# Incremental history search.
"\C-s": reverse-search-history
"\e\C-s": forward-search-history

# Insert the last word from the previous history event.
"\e.": yank-last-arg
"\e>": yank-nth-arg

# dynamic-complete-history can be found on "\e\C-i".

#
# Key bindings - Modifying text
#

# Delete the character under the cursor, or list possible completions for the
# current word.
"\C-d": delete-char-or-list
"\e[3~": delete-char-or-list

# Delete the character behind the cursor.
"\C-?": backward-delete-char

# Kill/Delete the curent word.
"\ed": kill-word
"\e[3;3~": kill-word
"\e[3;5~": kill-word

# Kill the word behind the cursor.
"\C-h": backward-kill-word
"\C-w": unix-word-rubout
"\e\C-?": unix-word-rubout

# Kill from the cursor to the end of the line.
"\C-k": kill-line
# Kill from the beginning of the line to the cursor position.
"\ek": backward-kill-line
"\e\C-h": backward-kill-line
# Kill the current line.
"\e\C-k": kill-whole-line

# Insert the contents of the kill buffer at the cursor position.
"\C-y": yank
# Remove the text just yanked, rotate the kill-ring and yank the new top.
"\ey": yank-pop

# Convert the current word to all uppercase/lowercase and move past it.
"\C-xu": upcase-word
"\C-xl": downcase-word

# Toggle between overwrite mode and insert mode.
"\e[2~": overwrite-mode

# Edit command in an external editor.
"\C-x\C-e": edit-and-execute-command

# Toggle comment at the start of the line.
"\e;": insert-comment

#
# Key bindings - Completion
#

# Attempt completion on the current word.
"\C-i": complete
"\e[Z": menu-complete

# Expand history on space.
" ": magic-space

# Perform shell expansion on the current line.
"\e ": shell-expand-line

#
# Key bindings - Misc
#

# Finish editing the buffer and execute it as a shell command.
"\C-m": accept-line

# Clear the screen and redraw the prompt.
"\C-l": clear-screen
# Abort the current editor line or function.
"\C-g": abort

# Incrementally undo the last text modification.
"\eu": undo

# Support the bracketed-paste sequence generated by the terminal emulator when
# text is pasted.
"\e[200~": bracketed-paste-begin

# Raw insert of character sequence.
"\C-x'": quoted-insert
